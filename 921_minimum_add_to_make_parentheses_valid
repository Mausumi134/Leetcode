class Solution {
public:
    int minAddToMakeValid(string s) {
        int openbracket=0;
        int makevalid=0;
       for(int i=0;i<s.size();i++){
        char c=s[i];
        if(c=='('){
           openbracket++; 
        }
        else{
            if(openbracket>0)openbracket--;
            else makevalid++;
        }
       }
       return openbracket+makevalid;
    }
};