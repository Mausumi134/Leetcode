class Solution {
public:
    int maxWidthRamp(vector<int>& nums) {
        int n=nums.size();
        stack<pair<int,int>>st;
        for(int i=0;i<n;i++){
            if(st.empty() || st.top().first>nums[i]){
                st.push({nums[i],i});
            }
        }
        int maxi=0;
        for(int i=n-1;i>=0;i--){
            while(!st.empty() && st.top().first<=nums[i]){
            maxi=max(maxi,i-st.top().second);
            st.pop();
            }
        }
        return maxi;
    }
};